<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".aboutus"
    android:orientation="vertical"
    android:background="@drawable/bggradient">


    <TextView
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:text="ABOUT US"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/card_background"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/person_icon_white"
                android:padding="10dp"
                android:text="  Aditya VSM"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backend Developer"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  adityavsm.is19@bmsce.ac.in"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_baseline_mail_24"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/vsmphoto"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/card_background"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/person_icon_white"
                android:padding="10dp"
                android:text="  Akash"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frontend Developer"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  akashashok.is19@bmsce.ac.in"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_baseline_mail_24"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/akashphoto"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/card_background"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/person_icon_white"
                android:padding="10dp"
                android:text="  Aniruddh"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frontend Developer"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  aniruddh.is19@bmsce.ac.in"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_baseline_mail_24"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/anirudhphoto"
            android:layout_gravity="center_vertical"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"/>
    </LinearLayout>





</LinearLayout>